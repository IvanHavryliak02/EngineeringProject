{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Arduino",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "compile",
        "--fqbn",
        "arduino:avr:nano",
        "--output-dir",
        "${workspaceFolder}/build",
        "${workspaceFolder}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
